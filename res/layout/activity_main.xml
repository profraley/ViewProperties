<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <RadioGroup android:id="@+id/propertyGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <RadioButton android:text="Alpha"
            android:id="@+id/alpha" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton android:text="Rotate Z"
            android:id="@+id/rotateZ" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton android:text="Translation X"
            android:id="@+id/transX" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <RadioButton android:text="Translation Y" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/transY"/>
        <RadioButton android:text="Scale" 
            android:id="@+id/scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    
    <View android:id="@+id/view"
        android:background="#FFFF0000"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/propertyGroup"/>
    
    <SeekBar android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:max="100"
        android:progress="50"/>"

</RelativeLayout>